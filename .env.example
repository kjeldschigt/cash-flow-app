# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=sqlite:///cashflow.db

# Encryption & Security
ENCRYPTION_MASTER_KEY=your-32-character-encryption-key-here
SECRET_KEY=your-secret-key-for-session-management

# Environment
ENVIRONMENT=development

# Admin User Configuration (Optional)
# If not set, a setup wizard will appear on first launch
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password

# Stripe Configuration (Payment Processing)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Airtable Configuration (Data Integration)
AIRTABLE_API_KEY=keyYourAirtableAPIKeyHere
AIRTABLE_BASE_ID=appYourAirtableBaseIDHere
AIRTABLE_TABLE_NAME=YourTableName

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
TIMEZONE=UTC

# External API Keys (if needed)
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
NOTIFICATION_SERVICE_KEY=your-notification-service-key

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=csv,xlsx,pdf

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
