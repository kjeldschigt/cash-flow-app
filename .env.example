# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
# Encryption & Security
ENCRYPTION_MASTER_KEY=your-32-character-encryption-key-here
SECRET_KEY=your-secret-key-for-session-management

# Environment Configuration
DEBUG=True
DATABASE_URL=sqlite:///cashflow.db
ENVIRONMENT=development

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Session Management
SESSION_SECRET_KEY=your-super-secret-session-key-here-32-chars-min
COOKIE_SECRET_KEY=your-cookie-secret-key-here-32-chars-min
COOKIE_DOMAIN=localhost
SESSION_TIMEOUT=3600
CSRF_TIMEOUT=1800
MAX_SESSIONS_PER_USER=5

# API Key Management
API_KEY_MASTER_KEY=your-api-key-encryption-master-key-32-chars-min

# Admin User Configuration (Optional - used for first launch setup)
# If not set, the setup wizard will prompt for admin credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_secure_password_here

# Stripe Configuration (Payment Processing)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Airtable Configuration (Data Integration)
AIRTABLE_API_KEY=keyYourAirtableAPIKeyHere
AIRTABLE_BASE_ID=appYourAirtableBaseIDHere
AIRTABLE_TABLE_NAME=YourTableName

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
TIMEZONE=UTC

# External API Keys (if needed)
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
NOTIFICATION_SERVICE_KEY=your-notification-service-key

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=csv,xlsx,pdf

# Cache Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600
